    //- meta(name='msapplication-TileColor', content='#5bbad5')
    //- meta(name='theme-color', content='#000')
    //- meta(name='msapplication-navbutton-color', content='#000')
    //- meta(name='apple-mobile-web-app-status-bar-style', content='#000')

    block meta
      title Проекты

    block head
      link(rel='stylesheet', href='css/style.css')
      script
        include ../js/head-script.js

  body
    noscript У вас отключен JavaScript. Это пугает.
   
    .page__inner 
      .separator_left.separator_left--project
        .separator_left__wrapper.animate__animated.animate__fadeInDownBig 
            h3 command
            .separator_left__border
      .page__content.project
        block content
          h1.site_title
           a(href="index.html") Luna Makoi Project
         
          .row
              .row__col-1.row__el.animate__animated.animate__fadeInTopLeft 
                a.project__title.mr-20(href="consept.html") концепции для инвесторов
                a.project_img(href="consept.html")
                  img(src="img/p1.jpg")
                
              .row__col-2.row__el.animate__animated.animate__fadeInTopRight
                a.project_img(href="work-image.html")
                  img(src="img/p2.jpg")
                a.project__title.ml-40(href="work-image.html") проекты в картинках
               
              .row__col-3.row__el.animate__animated.animate__fadeInBottomLeft 
                a.project__title.rotate(href="work.html") этапы проектирования
                a.project_img(href="work.html")
                  img(src="img/p3.jpg")
               
              .row__col-4.row__el.animate__animated.animate__fadeInBottomRight
                 a.project_img(href="work-one.html")
                   img(src="img/p4.jpg")
                 a.project__title.ml-40(href="work-one.html") пример готового проекта
               

      .separator_right.separator_right--project
        .separator_right__wrapper.animate__animated.animate__fadeInDownBig 
            .separator_right__border
           
      .separator_bottom 
        .separator_bottom__wrapper 
            .separator_bottom__border--one.wow.animate__animated.animate__fadeInRightBig 
            .separator_bottom__border--two.wow.animate__animated.animate__fadeInLeftBig 
            h3.wow.animate__animated.animate__fadeInRightBig projects
    +bottom-block()
          ul.sotial 
            li 
              a.sotial.insta(href='/')
                svg(class="sotial" width="23px" height="23px")
                  use(xlink:href="img/sprite.svg#insta") 
            li 
              a.sotial.fb(href='/')
                svg(class="sotial" width="22px" height="23px")
                  use(xlink:href="img/sprite.svg#fb") 
            li 
              a.sotial.twitter(href='/')
                svg(class="sotial" width="22px" height="23px")
                  use(xlink:href="img/sprite.svg#twitter") 
          p #[a(href='tel:+79183009532') 8 918 300 95 32]
          p #[a(href='mailto:Lunela.makoi@gmail.com') Lunela.makoi@gmail.com] 
          p #[a(href='mailto:Lunela.makoi@gmail.com') @Lina_makoi_designer]    
          #wave_wrapper.wave_wrapper 
              audio#audio(loop)
                source(src="img/sound/summer.mp3" type="audio/mpeg")
              svg(class="wave" width="100px" height="43px")
                use(xlink:href="img/sprite.svg#wave") 
    .page__footer-wrapper
        +page-footer()
          block footer
            .row
              .row__col-1 (с) 2020 Luna Makoi Projekt ® <br>Все права защищены
              .row__col-2.footer-center Создание сайта <br> #[a(href='/') indigo market]
              .row__col-3 
                ul 
                  li  #[a(href='about.html') Обо мне]
                  li  #[a(href='project.html') Проекты]
                  li  #[a(href='news.html') Новости]
                  li  #[a(href='servise.html') Услуги]
                div.footer-right Luna <br> Makoi <br> Project
    script(src='js/bundle.js')
